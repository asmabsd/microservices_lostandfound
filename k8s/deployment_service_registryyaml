apiVersion: apps/v1
kind: Deployment
metadata:
  name: service-registry
spec:
  replicas: 1
  selector:
    matchLabels:
      app: service-registry
  template:
    metadata:
      labels:
        app: service-registry
    spec:
      containers:
        - name: service-registry
          image: lostandfoundacr.azurecr.io/service-registry:latest
          ports:
            - containerPort: 8761
          env:
            - name: eureka.client.registerWithEureka
              value: "false"
            - name: eureka.client.fetchRegistry
              value: "false"
